<%= form_for [location, game] do |f| %>
  <% if @game.errors.any? %>
  <div id="error_explanation">
  <h2><%= pluralize(@game.errors.count, "error") %> prohibited this article from being saved:</h2>
  <ul>
  <% @game.errors.full_messages.each do |msg| %>
